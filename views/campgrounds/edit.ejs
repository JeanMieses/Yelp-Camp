<% layout('layouts/boilerplate') %>

  <br>

  <div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-5 offset-3">
      <form enctype="multipart/form-data" novalidate class="validation" action="/campgrounds/<%=campground._id %>?_method=PUT" method="post">
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input class="form-control" id="title" required type="text" name="campground[title]" value="<%=campground.title%>">
        <div class="valid-feedback">Looks Good</div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input class="form-control" id="location" required type="text" name="campground[location]" value="<%=campground.location%>">
        <div class="valid-feedback">Looks Good</div>
        </div>

        <div class="mb-3">
          <label for="imgs" class="form-label">Upload Images</label>
          <input name="imgs" class="form-control" type="file" id="imgs" multiple>
        </div>

        <div class="mb-3">
          <label class="form-label" for="price">Price</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>
            <input id="price" required type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="campground[price]" value="<%=campground.price%>">
            <div class="valid-feedback">Looks Good</div>
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea class="form-control" id="description" required type="text" name="campground[description]">
            "<%=campground.description%>"
          </textarea>
          <div class="valid-feedback">Looks Good</div>
        </div>

        <div class="mb-3">
          <%campground.imgs.forEach((img, i) => {%>
            <img class="img-thumbnail" src="<%=img.thumbnail%>" alt="">
            <div class="form-check-inline">
              <input id="image-<%=i%>" type="checkbox" name="deleteImgs[]" value='<%=img.fileName%>'>
            </div>
            <label for="image-<%=i%>">Delete</label>
          <%} )%>
        </div>

        <div class="mb-3">
          <button class="btn btn-info">Update Campground</button>
        </div>
      </form>
      <a href="/campgrounds/<%=campground._id%>">Back to Campground</a>
    </div>
  </div>
