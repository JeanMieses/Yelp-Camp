<% layout('layouts/boilerplate') %>

    <a href="/campgrounds/new">Add New Campground</a>

      <% for(let campground of campgrounds) {%>

        <div class="card mb-3">
          <div class="row">
            <div class="col-md-4">
              <% if(campground.imgs.length) { %>
                <img class="img-fluid" src="<%=campground.imgs[0].url%>" >

              <% } else  {%>
                <img class="img-fluid" src="https://res.cloudinary.com/jean0275/image/upload/v1620903193/YelpCamp/omggzhcjabatfs2ecubf.jpg">
                <%  }%>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"> <%= campground.title %></h5>
                <p class="card-text"><%=campground.description %></p>
                <p class="card-text text-muted">
                  <%=campground.location%>
                </p>
                <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">View
                  <%= campground.title %>
                </a>

              </div>
            </div>

          </div>
        </div>
      <% } %>
